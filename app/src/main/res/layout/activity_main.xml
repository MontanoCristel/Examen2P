<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/background_light"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calificaciones"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primer Parcial "
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/etparcial1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Primer Parcial"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segundo Parcial "
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/etparcial2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etparcial1"
            android:layout_marginTop="16dp"
            android:hint="Segundo Parcial"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promedio: "
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnCalcular"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etparcial2"
        android:layout_marginTop="16dp"
        android:text="Calcular"
        android:layout_gravity="center"/>


</LinearLayout>